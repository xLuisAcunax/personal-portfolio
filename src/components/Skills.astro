---
const skills = [
  { name: ".NET Core", icon: "devicon-dotnetcore-plain" },
  { name: "C#", icon: "devicon-csharp-plain" },
  { name: "Angular", icon: "devicon-angularjs-plain" },
  { name: "TypeScript", icon: "devicon-typescript-plain" },
  { name: "Node.js", icon: "devicon-nodejs-plain" },
  { name: "Google Cloud", icon: "devicon-googlecloud-plain" },
  { name: "MongoDB", icon: "devicon-mongodb-plain" },
  { name: "SQL Server", icon: "devicon-microsoftsqlserver-plain" },
  { name: "Docker", icon: "devicon-docker-plain" },
  { name: "Git", icon: "devicon-git-plain" },
];
---

<section id="skills" class="py-20 border-t border-white/10">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-3xl font-bold mb-12 text-white">Technical Expertise</h2>
    
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-6">
      {skills.map(skill => (
        <div class="group flex flex-col items-center justify-center p-6 bg-neutral-900/30 backdrop-blur-sm rounded-xl border border-white/10 hover:border-blue-500/30 hover:bg-neutral-900/50 transition-all hover:-translate-y-1">
          <i class={`${skill.icon} text-4xl mb-3 text-neutral-400 group-hover:text-blue-400 transition-colors`}></i>
          <span class="text-sm font-medium text-neutral-400 group-hover:text-white transition-colors">{skill.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>
