---
type NavItem = { label: string; href: string };

interface Props {
  brand?: string;
  tagline?: string;
  githubUrl?: string;
  linkedinUrl?: string;
  nav?: ReadonlyArray<Readonly<NavItem>>;
}
const {
  brand = 'Luis Acuña',
  tagline = 'Software Engineer · .NET · Angular · Azure',
  githubUrl = 'https://github.com/xLuisAcunax',
  linkedinUrl = 'https://www.linkedin.com/in/ldacuna83/',
  nav = [
    { label: 'Experiencia', href: '/#experiencia' },
    { label: 'Proyectos',   href: '/#proyectos' },
    { label: 'Contacto',    href: '/#contacto' },
    { label: 'CV',          href: '/cv.pdf' },
  ],
} = Astro.props;

// Año dinámico renderizado en el servidor (no JS en el cliente)
const year = new Date().getFullYear();
---
<footer class="bg-black text-gray-400 mt-16 border-t border-gray-800">
  <div class="mx-auto max-w-5xl px-4 py-8 flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
    <!-- Branding -->
    <div class="text-center md:text-left">
      <h2 class="text-white font-semibold text-lg tracking-tight">{brand}</h2>
      <p class="text-sm">{tagline}</p>
    </div>

    <!-- Navegación -->
    <nav class="flex flex-wrap items-center justify-center gap-4">
      {nav.map((item) => (
        <a
          href={item.href}
          class="text-sm hover:text-white transition focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded"
        >
          {item.label}
        </a>
      ))}
    </nav>

    <!-- Redes -->
    <div class="flex items-center justify-center gap-5">
      <a
        href={githubUrl}
        aria-label="GitHub"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-white transition focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded"
      >
        <!-- Ícono GitHub -->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-6 w-6 fill-current">
          <path d="M12 .5a12 12 0 0 0-3.8 23.4c.6.1.8-.2.8-.6v-2.1c-3.4.7-4.1-1.6-4.1-1.6-.5-1.3-1.1-1.7-1.1-1.7-.9-.6.1-.6.1-.6 1 .1 1.5 1 1.5 1 .9 1.6 2.4 1.1 3 .9.1-.7.3-1.1.6-1.4-2.7-.3-5.4-1.3-5.4-6 0-1.3.5-2.3 1.2-3.1-.1-.3-.5-1.6.1-3.3 0 0 1-.3 3.3 1.3a11.6 11.6 0 0 1 6.1 0c2.2-1.6 3.3-1.3 3.3-1.3.6 1.7.2 3 .1 3.3.8.8 1.2 1.8 1.2 3.1 0 4.6-2.7 5.6-5.4 5.9.4.4.7 1 .7 2.1v3.1c0 .4.2.8.8.6A12 12 0 0 0 12 .5z"/>
        </svg>
      </a>
      <a
        href={linkedinUrl}
        aria-label="LinkedIn"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-white transition focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded"
      >
        <!-- Ícono LinkedIn -->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-6 w-6 fill-current">
          <path d="M4.98 3.5A2.5 2.5 0 1 0 5 8.5a2.5 2.5 0 0 0-.02-5zM3 9h4v12H3zM9 9h3.8v1.7h.1c.5-.9 1.8-1.8 3.7-1.8 4 0 4.7 2.6 4.7 6V21h-4v-5.3c0-1.3 0-3-1.8-3s-2.1 1.4-2.1 2.9V21H9z"/>
        </svg>
      </a>
    </div>
  </div>

  <!-- Derechos -->
  <div class="text-center text-xs text-gray-500 border-t border-gray-800 py-4">
    by {brand} {year}.
  </div>
</footer>
